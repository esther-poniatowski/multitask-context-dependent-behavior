// Folder-Specific Settings - Test Directory
{
    // Code Diagnosis with Pylance
	"python.analysis.typeCheckingMode": "basic",
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.pytestFixtures": true,
    "python.analysis.inlayHints.pytestMark": true,
    "python.analysis.inlayHints.pytestUnittest": true,
    "python.analysis.enablePytestSupport": true,

    // Linting with Pylint - Folder Specific (WIP)
    "pylint.args": [
        "disable=protected-access",
        "--rcfile=${workspaceFolder:FolderName}/config/tools/pylintrc_tests.ini"],
    "python.linting.pylintArgs": [
        "--disable=protected-access",
	],

    // Type Checking with MyPy - Folder Specific (not used so far)
	"mypy-type-checker.args": [
		"--config-file=${workspaceFolder:FolderName}/mypy.ini" // path to mypy configuration file
	],

}
